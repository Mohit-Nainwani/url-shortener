<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> URL Shortener</title>
    <base href="/">
    <!-- <link rel="stylesheet" href="style.css"> -->
    <script src="index.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>URL-Shortener</h1>
        <form action="/" method="POST" class="my-4 form-inline">
            <!-- form-inline -->
            <input required type="url" placeholder="URL" name="fullurl" class="form-control">
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>FullURL</th>
                    <th>ShortURL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% db.forEach(link=> { %>
                    <tr>
                        <td><a href="<%=link.fullURL%>" target="_blank">
                                <%=link.fullURL%>
                            </a></td>
                        <td onclick="incrementClick(this)"><a href="<%=link.shortURL%>" target="_blank">
                                <%=link.shortURL%>
                            </a></td>
                        <td>
                            <%=link.click%>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>